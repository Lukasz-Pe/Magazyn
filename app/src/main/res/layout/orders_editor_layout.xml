<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/LinearLayout_order_choose_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/outline_person_search_black_48"/>
            <TextView
                android:id="@+id/textView_order_choose_customer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size"
                android:hint="@string/order_choose_customer"
                android:layout_gravity="center"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/textView_order_choose_customer_id"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/imageButton_orders_add_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/outline_add_shopping_cart_black_48"/>
            <ListView
                android:id="@+id/listView_orders_items_list"
                android:layout_height="match_parent"
                android:layout_width="match_parent">

            </ListView>
        </LinearLayout>
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_order_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/outline_save_black_48" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_order_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/outline_delete_black_48" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_order_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/outline_arrow_back_black_48" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>